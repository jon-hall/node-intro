@import url(https://fonts.googleapis.com/css?family=Asap:400,700);

body
    font-family 'Asap', sans-serif
    font-size 1.3em
    font-weight bold
    text-align center

.header
    padding 1em 0 2em
    > .input
        color #77e
        border 1px solid #ccf
        text-align center
        margin 0 auto
        font-size 1.4em
        min-width 80%
        padding .3em
        border-radius .4em
        &:focus
            outline none
            border 2px solid #aaf
        &:active
            border 2px solid #88f

.username
    text-align center
    font-size 0.8em
    min-height 2em
    color #bbb
    padding-right 2em
    > em
        padding-left 0.2em
        color #aaa

.announcement
    padding-bottom 0.5em
    color #bbb

.message-row
    padding-bottom 0.5em
    color #e46
    &.me
        color #f8a

.message-user
    margin-right 1em

.message-body
    font-weight normal
